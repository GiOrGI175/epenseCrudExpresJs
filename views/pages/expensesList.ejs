<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/expense.css" />
  </head>
  <body>
    <h1>all expenses</h1>
    <a href="/create-expense">Crate new Expense</a>
    <div class="Card_Container">
      <% expenses.forEach(el => { %>
      <div class="card">
        <h2>Id: <%= el.id %></h2>
        <h2>Category: <%= el.category %></h2>
        <h2>Price: <%= el.price %></h2>
        <a href="/expense-list/<%= el.id %>">Show details</a>
        <button onclick="deleteExpense('<%= el.id %>')">delete</button>
        <a href="/expense-update/<%= el.id %>">Update</a>
      </div>
      <% }) %>
    </div>
    <script src="/js/deleteExpense.js"></script>
  </body>
</html>
